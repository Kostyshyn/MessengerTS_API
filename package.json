{
  "name": "messengerts_api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node ./dist/index.js",
    "start:dev": "tsc && cross-env NODE_ENV=development node -r ts-node/register ./src/index.ts",
    "dev": "nodemon",
    "lint": "eslint ./src/**",
    "build": "eslint ./src/** && tsc"
  },
  "_moduleAliases": {
    "@root": "dist/",
    "@config": "dist/config",
    "@controllers": "dist/controllers",
    "@models": "dist/models",
    "@routes": "dist/routes",
    "@middlewares": "dist/middlewares",
    "@database": "dist/database",
    "@services": "dist/services",
    "@error_handlers": "dist/error_handlers",
    "@data_lists": "dist/data_lists",
    "@validators": "dist/validators",
    "@helpers": "dist/helpers",
    "@cache": "dist/cache",
    "@seeds": "dist/seeds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kostyshyn/MessengerTS_API.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kostyshyn/MessengerTS_API/issues"
  },
  "homepage": "https://github.com/Kostyshyn/MessengerTS_API#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cluster": "^0.7.7",
    "colors": "^1.3.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.1.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "helmet": "^3.21.1",
    "http-errors": "^1.7.3",
    "ip": "^1.1.5",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.1",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "nanoid": "^3.1.18",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.4.11",
    "redis": "^2.8.0",
    "sharp": "^0.23.0",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "eslint": "^6.4.0",
    "nodemon": "^1.19.2",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  }
}
