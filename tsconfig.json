{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
    "removeComments": true,
		"outDir": "dist",
		"sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@database/*": ["src/database/*"],
      "@services/*": ["src/services/*"],
      "@error_handlers/*": ["src/error_handlers/*"],
      "@data_lists/*": ["src/data_lists/*"],
      "@validators/*": ["src/validators/*"]
    }
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}